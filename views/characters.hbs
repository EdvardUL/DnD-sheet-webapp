<!DOCTYPE html>
<html>
<head>
    <title>Список пользователей</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <div class="allusers">
        <form action="create_character" method="GET">
            <input type="submit" value="Add">
        </form>
        <form action="sort_character" method="POST">
            <input type="submit" value="Sort">
        </form>
        <form action="find_character" method="POST" style="display:inline;">
            <input name="needble_name" type="text">
            <input type="submit" value="Find">
        </form>
        <table>
        <tr><th>Name</th><th>Class</th><th></th></tr>
        {{#each characters}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.class}}</td>
                <td>
                    <form action="edit_character/{{this.id}}" method="GET" style="display:inline;">
                        <input type="submit" value="Изменить">
                    </form>
                    <form action="delete/{{this.id}}" method="POST" style="display:inline;">
                        <input type="submit" value="Delete" />
                    </form>
                </td>
            </tr>
        {{/each}} 
        </table>
    </div>
</body>
